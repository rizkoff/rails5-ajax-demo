let uuid="<%= @post.uuid %>";
let post_form=$("#post_form_" + uuid);
let post_rec=$('#post_rec_' + uuid);
post_form.hide();
<% if @post.errors.blank? %>
  post_rec.remove();
  $('#post_new_a').show();
  $('#posts_t tbody').append('<%= j render @post %>');
  $('#post_' + uuid).css("background-color", "#FFF");
<% else %>
  post_rec.css("background-color", "#F00");
  post_rec.on('click', function(){
    post_form.show();
  });
<% end %>
