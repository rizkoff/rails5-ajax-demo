let uuid="<%= @post.uuid %>";
$("#post_form_" + uuid).hide();
<% if @post.errors.blank? %>
  $('#post_rec_' + uuid).remove();
  $('#post_new_a').show();
  $('#posts_t tbody').append('<%= j render @post %>');
  $('#post_' + uuid).css("background-color", "#FFF");
<% else %>
  $('#post_rec_' + uuid).css("background-color", "#F00");
  $('#post_rec_' + uuid).on('click', function(){
    $('#post_form_' + uuid).show();
  });
<% end %>
