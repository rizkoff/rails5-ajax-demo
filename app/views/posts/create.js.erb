$('#new_post').remove();
<% if @post.errors.blank? %>
  $('#post_tmp').remove();
  $('#new_link').show();
  $('.table tbody').append('<%= j render @post %>');
  $('#post_<%= @post.id %>').css("background-color", "#FFF");
<% else %>
  $('#post_tmp').css("background-color", "#F00");
  $('#new_link').after('<%= j render("form", post: @post) %>');
<% end %>

