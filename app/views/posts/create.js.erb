$("#post_form_<%= @post.uuid %>").hide();
<% if @post.errors.blank? %>
  $('#post_rec_<%= @post.uuid %>').remove();
  $('#post_new_a').show();
  $('#posts_t tbody').append('<%= j render @post %>');
  $('#post_<%= @post.id %>').css("background-color", "#FFF");
<% else %>
  $('#post_rec_<%= @post.uuid %>').css("background-color", "#F00");
  $('#post_rec_<%= @post.uuid %>').on('click', function(){
    $("#post_form_<%= @post.uuid %>").show();
  });
<% end %>
