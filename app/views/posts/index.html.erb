<h1>Listing posts</h1>
<div class="row">
  <div class="panel">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Content</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <%= render 'post', post: post %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br/>
<%= link_to 'New Post', new_post_path, id: 'new_link', remote: true %>

