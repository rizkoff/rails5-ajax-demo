= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :descr
    = f.text_area :descr
  .field
    = f.label :due
    = f.date_select :due
  .field
    = f.label :int
    = f.number_field :int
  .actions
    = f.submit 'Save'
